      "@sampleWorkspace/buttons": [
        "libs/buttons/src/index.ts"
      ],
      "@sampleWorkspace/ui-components": [
        "libs/ui-components/src/index.ts"
      ],
      "@sampleWorkspace/school/login": [
        "libs/school/login/src/index.ts"
      ],
      "@sampleWorkspace/nico-core": [
        "libs/nico-core/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
